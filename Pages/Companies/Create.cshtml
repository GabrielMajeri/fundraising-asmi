@page
@model CreateModel
@{
    ViewData["Title"] = "Creează companie";
}

<h1>Adaugă o companie nouă</h1>

<form method="post" enctype="multipart/form-data" autocomplete="off">
    <div class="form-group">
        <label asp-for="Company.Name">Nume</label>
        <input class="form-control" placeholder="Numele companiei" asp-for="Company.Name" type="text" />
        <span asp-validation-for="Company.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Company.Site">Site web</label>
        <input class="form-control" placeholder="https://www.example.com" asp-for="Company.Site" />
        <span asp-validation-for="Company.Site" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Logo">Logo</label>
        <input class="form-control-file" asp-for="Logo" type="file" accept="image/png, image/jpeg" />
        <small class="form-text text-muted">Dimensiunea maximă permisă: @Data.LogoAttribute.MaxFileSizeBytes
            octeți</small>
        <span asp-validation-for="Logo" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <input class="btn btn-primary" type="submit" value="Trimite" />
    </div>
</form>

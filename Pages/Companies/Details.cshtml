@page "{id:int}"
@model DetailsModel
@{
    ViewData["Title"] = Model.Company.Name;
}

<h1>@Model.Company.Name</h1>
@if (Model.Company.Logo != null)
{
    <div>
        <img src="~/Image/@Model.Company.Logo.Id" alt="Logo @Model.Company.Name" />
    </div>
}
<div>
    <strong><a href="@Model.Company.Site" target="_blank" rel="noreferrer">Website</a></strong>
</div>
<div>
    <h2>Contacte</h2>
    <ul>
        @foreach (var contact in Model.Company.Contacts)
        {
            <li>@contact.Name</li>
        }
    </ul>
</div>

@page "{id:int?}"
@model EditModel

@if (Model.Id == null)
{
    ViewData["Title"] = "Creează contact";

    <h1>Adaugă un contact nou</h1>
}
else
{
    ViewData["Title"] = "Editează contact";
    <h1>Editează contactul existent</h1>
}

<form method="post" autocomplete="off">
    <input asp-for="Contact.CompanyId" value="@Model.Company.Id" hidden />

    <div class="form-group">
        <label asp-for="Company.Name">Companie</label>
        <input asp-for="Company.Name" type="text" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Contact.Name"></label>
        <input asp-for="Contact.Name" type="text" class="form-control" />
        <span asp-validation-for="Contact.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Contact.Email"></label>
        <input asp-for="Contact.Email" type="email" class="form-control" />
        <span asp-validation-for="Contact.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Contact.Telephone"></label>
        <input asp-for="Contact.Telephone" type="tel" class="form-control" />
        <span asp-validation-for="Contact.Telephone" class="text-danger"></span>
    </div>

    <div asp-validation-summary="All" class="text-danger">
    </div>

    <div class="mt-3">
        <input class="btn btn-primary" type="submit" value="Trimite" />
    </div>
</form>
